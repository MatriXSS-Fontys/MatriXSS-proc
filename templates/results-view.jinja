<!DOCTYPE html>
<html>
  <head>
    <title>MatriXSS</title>
    <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='css/results-view.css') }}">
  </head>
  <body>
    <h1>Scan results</h1>
    <div class="container">
      <div id="results-container">
        <p style="color: white;">Click on any row to display its page.</p>
        <table id="results-table">
          <tr>
            <th>url</th>
            <th>element query selector</th>
            <th>page name</th>
          </tr>
          {% for item in found_vulns %}
          <tr>
            <td>{{item.url}}</td>
            <td>{{item.element_selector}}</td>
            <td>{{item.page_name}}</td>
          </tr>
          {% endfor %}
        </table>
      </div>
      
      <div class="page-view-container"></div>
    </div>
  </body>
</html>
